# VoiceCart Environment Configuration
# Copy this file to .env and fill in your actual API keys

# Server Configuration
PORT=3001
NODE_ENV=development

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-placeholder-key-get-real-key-from-openai

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/voicecart

# File Upload Configuration
MAX_FILE_SIZE=10485760

# CORS Configuration (for development)
CLIENT_URL=http://localhost:3003

# Session/JWT Configuration (if needed for authentication)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Rate Limiting (requests per windowMs)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Voice Processing Configuration
VOICE_PROCESSING_TIMEOUT=30000

# Notification Configuration (for SMS/WhatsApp later)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Deployment Configuration
REDIS_URL=redis://localhost:6379
